@page
@model HospOps.Pages.Logbook.EditModel
@{
    ViewData["Title"] = "Edit Log Entry";
}

<h2 class="mb-3">Edit Log Entry</h2>

<form method="post">
    <input type="hidden" asp-for="Entry.Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-3">
        <div class="col-12 col-md-4">
            <label asp-for="Entry.Date" class="form-label"></label>
            <input asp-for="Entry.Date" class="form-control" type="date" />
            <span asp-validation-for="Entry.Date" class="text-danger"></span>
        </div>

        <div class="col-12 col-md-4">
            <label asp-for="Entry.Department" class="form-label"></label>
            <select asp-for="Entry.Department" class="form-select"
                    asp-items="Html.GetEnumSelectList<Department>()"></select>
            <span asp-validation-for="Entry.Department" class="text-danger"></span>
        </div>

        <!-- SHIFT REMOVED FROM UI -->

        <div class="col-12 col-md-4">
            <label asp-for="Entry.Severity" class="form-label"></label>
            <select asp-for="Entry.Severity" class="form-select"
                    asp-items="Html.GetEnumSelectList<Severity>()"></select>
            <span asp-validation-for="Entry.Severity" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Entry.Title" class="form-label"></label>
            <input asp-for="Entry.Title" class="form-control" />
            <span asp-validation-for="Entry.Title" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="Entry.Notes" class="form-label"></label>
            <textarea asp-for="Entry.Notes" rows="5" class="form-control"></textarea>
            <span asp-validation-for="Entry.Notes" class="text-danger"></span>
        </div>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="./Index" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
