@page
@model HospOps.Pages.Logbook.CreateModel
@{
    ViewData["Title"] = "New Log Entry";
}
<h3>New Log Entry</h3>
<form method="post" class="row g-3">
    <div class="col-md-6">
        <label class="form-label">Title</label>
        <input class="form-control" asp-for="Item.Title" />
        <span asp-validation-for="Item.Title" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <label class="form-label">Severity</label>
        <select class="form-select" asp-for="Item.Severity" asp-items="Model.SeveritiesSelect"></select>
    </div>
    <div class="col-md-3">
        <label class="form-label">Department</label>
        <select class="form-select" asp-for="Item.DepartmentId" asp-items="Model.DepartmentsSelect">
            <option value="">(none)</option>
        </select>
    </div>
    <div class="col-12">
        <label class="form-label">Notes</label>
        <textarea rows="4" class="form-control" asp-for="Item.Notes"></textarea>
    </div>
    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-secondary" asp-page="Index">Cancel</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
