@page
@model HospOps.Pages.Logbook.IndexModel
@{
    ViewData["Title"] = "Logbook";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-outline-secondary"
       asp-page-handler="PrevDay"
       asp-route-date="@Model.Day.ToString("yyyy-MM-dd")">← Previous Day</a>

    <strong>@Model.Day.ToString("dddd, MMM d, yyyy")</strong>

    <a class="btn btn-outline-secondary"
       asp-page-handler="NextDay"
       asp-route-date="@Model.Day.ToString("yyyy-MM-dd")">Next Day →</a>
</div>

<form method="get" class="row gy-2 gx-2 align-items-end mb-3">
    <div class="col-auto">
        <label class="form-label">Date</label>
        <input class="form-control" type="date" name="date" value="@Model.Day.ToString("yyyy-MM-dd")" />
    </div>
    <div class="col-auto">
        <label class="form-label">Department</label>
        <select class="form-select" name="DepartmentFilter">
            <option value="">All</option>
@foreach (var v in Enum.GetValues(typeof(HospOps.Models.Department)))
{
    var selected = (Model.DepartmentFilter.HasValue && (int)Model.DepartmentFilter.Value == (int)v) ? "selected" : "";
    <option value="@((int)v)" selected="@selected">@v</option>
}
        </select>
    </div>
    <div class="col-auto">
        <label class="form-label">Severity</label>
        <select class="form-select" name="SeverityFilter">
            <option value="">All</option>
@foreach (var v in Enum.GetValues(typeof(HospOps.Models.Severity)))
{
    var selected = (Model.SeverityFilter.HasValue && (int)Model.SeverityFilter.Value == (int)v) ? "selected" : "";
    <option value="@((int)v)" selected="@selected">@v</option>
}
        </select>
    </div>
    <div class="col-auto">
        <label class="form-label">Search</label>
        <input class="form-control" type="text" name="q" value="@Model.Q" placeholder="title/notes/author..." />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary" type="submit">Apply</button>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th style="width:8rem">Time</th>
            <th style="width:8rem">Severity</th>
            <th style="width:12rem">Department</th>
            <th>Title</th>
            <th style="width:12rem">Author</th>
            <th style="width:7rem"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var e in Model.Entries)
{
    <tr>
        <td>@e.CreatedAt.ToLocalTime().ToString("hh:mm tt")</td>
        <td>@e.Severity</td>
        <td>@e.Department</td>
        <td>
            <div class="fw-semibold">@e.Title</div>
            @if (!string.IsNullOrWhiteSpace(e.Notes))
            {
                <div class="text-muted small">@e.Notes</div>
            }
        </td>
        <td>@e.CreatedBy</td>
        <td class="text-end">
            <a asp-page="Edit" asp-route-id="@e.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
@* Admin delete guarded server-side *@
@if (User.IsInRole("Admin"))
{
            <form method="post" asp-page-handler="Delete" asp-route-id="@e.Id" class="d-inline">
                <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this entry?');">Delete</button>
            </form>
}
        </td>
    </tr>
}
    </tbody>
</table>