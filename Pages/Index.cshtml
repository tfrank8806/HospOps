@page
@model HospOps.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}
<h3>Dashboard</h3>

<div class="row g-3">
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">Recent Work Orders</div>
      <ul class="list-group list-group-flush">
      @foreach (var w in Model.RecentWorkOrders)
      {
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <div class="fw-semibold">@w.Issue</div>
            <div class="small text-muted">@w.Location</div>
          </div>
          <div class="text-end">
            <div class="small">@w.CreatedAt.ToLocalTime().ToString("g")</div>
            <span class="badge" style="background-color:@(w.StatusRef?.ColorHex ?? "#6c757d")">@w.StatusRef?.Name</span>
          </div>
        </li>
      }
      </ul>
    </div>
  </div>

  <div class="col-md-6">
    <div class="card">
      <div class="card-header">Lost &amp; Found</div>
      <ul class="list-group list-group-flush">
      @foreach (var f in Model.RecentFound)
      {
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <div class="fw-semibold">@f.Item</div>
            <div class="small text-muted">@f.Location</div>
          </div>
          <div class="small">@f.CreatedAt.ToLocalTime().ToString("g")</div>
        </li>
      }
      @foreach (var l in Model.RecentLost)
      {
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div>
            <div class="fw-semibold">@l.Item</div>
            <div class="small text-muted">@l.Location</div>
          </div>
          <div class="small">@l.CreatedAt.ToLocalTime().ToString("g")</div>
        </li>
      }
      </ul>
    </div>
  </div>
</div>
