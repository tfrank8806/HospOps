@page "{id:int}"
@model HospOps.Pages.WorkOrders.DetailsModel
@{
    ViewData["Title"] = "Work Order Details";
}
<h3>Work Order Details</h3>

<dl class="row">
    <dt class="col-sm-3">Created</dt>
    <dd class="col-sm-9">@Model.Item.CreatedAt.ToLocalTime().ToString("g")</dd>

    <dt class="col-sm-3">Issue</dt>
    <dd class="col-sm-9">@Model.Item.Issue</dd>

    <dt class="col-sm-3">Location</dt>
    <dd class="col-sm-9">@Model.Item.Location</dd>

    <dt class="col-sm-3">Department</dt>
    <dd class="col-sm-9">@Model.Item.AssignedDepartment?.Name</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">
        <span class="badge" style="background-color:@(Model.Item.StatusRef?.ColorHex ?? "#6c757d")">
            @Model.Item.StatusRef?.Name
        </span>
    </dd>

    <dt class="col-sm-3">Due</dt>
    <dd class="col-sm-9">@Model.Item.DueDate?.ToLocalTime().ToString("d")</dd>

    <dt class="col-sm-3">Closed</dt>
    <dd class="col-sm-9">@Model.Item.ClosedAt?.ToLocalTime().ToString("g")</dd>

    <dt class="col-sm-3">Completion Notes</dt>
    <dd class="col-sm-9">@Model.Item.CloseNotes</dd>
</dl>

<a class="btn btn-secondary" asp-page="Index">Back</a>
