@page "{id:int}"
@model HospOps.Pages.WorkOrders.EditModel
@{
    ViewData["Title"] = "Edit Work Order";
}
<h3>Edit Work Order</h3>

<form method="post" class="row g-3">
    <input type="hidden" asp-for="Item.Id" />

    <div class="col-md-6">
        <label class="form-label">Issue</label>
        <input class="form-control" asp-for="Item.Issue" />
        <span asp-validation-for="Item.Issue" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label class="form-label">Location</label>
        <input class="form-control" asp-for="Item.Location" />
    </div>

    <div class="col-12">
        <label class="form-label">Details</label>
        <textarea rows="4" class="form-control" asp-for="Item.Details"></textarea>
    </div>

    <div class="col-md-4">
        <label class="form-label">Department</label>
        <select class="form-select" asp-for="Item.AssignedDepartmentId" asp-items="Model.DepartmentsSelect"></select>
    </div>

    <div class="col-md-4">
        <label class="form-label">Type</label>
        <select class="form-select" asp-for="Item.WorkOrderTypeId" asp-items="Model.TypesSelect">
            <option value="">(none)</option>
        </select>
    </div>

    <div class="col-md-4">
        <label class="form-label">Status</label>
        <select class="form-select" asp-for="Item.StatusId" asp-items="Model.StatusesSelect"></select>
    </div>

    <div class="col-md-4">
        <label class="form-label">Due</label>
        <input type="date" class="form-control" asp-for="Item.DueDate" />
    </div>

    <div class="col-md-8">
        <label class="form-label">Completion Notes</label>
        <textarea rows="2" class="form-control" asp-for="Item.CloseNotes"></textarea>
    </div>

    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-secondary" asp-page="Index">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
