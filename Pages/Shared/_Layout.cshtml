@* File: Pages/Shared/_Layout.cshtml *@
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HospOps</title>

    <!-- Bootstrap from CDN (fixes 404s from /wwwroot/lib) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark border-bottom shadow-sm">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">HospOps</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="mainNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" asp-page="/Index">Home</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/PassOn/Index">Pass On</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/WorkOrders/Index">Work Orders</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/LostFound/Index">Lost &amp; Found</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Calendar/Index">Calendar</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Phonebook/Index">Phonebook</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Logbook/Index">Logbook</a></li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container py-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container py-3">
            &copy; @DateTime.Now.Year - HospOps
        </div>
    </footer>

    <!-- Bootstrap bundle (with Popper) from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
