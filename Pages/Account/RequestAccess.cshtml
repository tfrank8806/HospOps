@page
@model HospOps.Pages.Account.RequestAccessModel
@{
    ViewData["Title"] = "Request Access";
}
<div class="row justify-content-center">
  <div class="col-md-7">
    <div class="card shadow-sm">
      <div class="card-header">
        <strong>Request Access</strong>
      </div>
      <div class="card-body">
        @if (TempData["Msg"] is string m)
        {
            <div class="alert alert-info">@m</div>
        }
        <form method="post" class="row g-3">
          <div class="col-md-6">
            <label class="form-label">First Name</label>
            <input class="form-control" asp-for="Input.FirstName" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Last Name</label>
            <input class="form-control" asp-for="Input.LastName" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Email</label>
            <input class="form-control" type="email" asp-for="Input.Email" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Mobile Phone (optional)</label>
            <input class="form-control" asp-for="Input.MobilePhone" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Property MARSHA/INN Code</label>
            <input class="form-control" asp-for="Input.PropertyCode" />
          </div>
          <div class="col-md-6">
            <label class="form-label">Create Password</label>
            <input class="form-control" type="password" asp-for="Input.Password" />
          </div>
          <div class="col-12">
            <button class="btn btn-primary" type="submit">Submit Request</button>
          </div>
        </form>
        <div class="mt-3">
          <a asp-page="/Account/Login">Back to Login</a>
        </div>
      </div>
    </div>
  </div>
</div>
