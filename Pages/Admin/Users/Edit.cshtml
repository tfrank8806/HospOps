@page "{id:int}"
@model HospOps.Pages.Admin.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}
<h2 class="mb-3">Edit User</h2>

<form method="post" asp-page-handler="Save" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Input.Id" />
    <div class="col-md-4">
        <label asp-for="Input.Username" class="form-label"></label>
        <input asp-for="Input.Username" class="form-control" readonly />
    </div>
    <div class="col-md-4">
        <label asp-for="Input.Email" class="form-label"></label>
        <input asp-for="Input.Email" class="form-control" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label class="form-label">Role</label>
        <select asp-for="Input.Role" class="form-select">
            <option>User</option>
            <option>Admin</option>
        </select>
        <span asp-validation-for="Input.Role" class="text-danger"></span>
    </div>
    <div class="col-md-3 form-check ms-2 mt-4">
        <input asp-for="Input.IsActive" class="form-check-input" />
        <label asp-for="Input.IsActive" class="form-check-label"></label>
    </div>
    <div class="col-12">
        <button class="btn btn-primary" type="submit">Save</button>
        <a class="btn btn-secondary ms-2" asp-page="./Index">Back</a>
    </div>
</form>

<hr />
<h4 class="mt-3">Change Password</h4>
<form method="post" asp-page-handler="ChangePassword" asp-route-id="@Model.Input.Id" class="row gy-2">
    <div class="col-md-4">
        <label class="form-label">New Password</label>
        <input class="form-control" type="password" name="newPassword" required minlength="6" />
    </div>
    <div class="col-md-4">
        <label class="form-label">Confirm Password</label>
        <input class="form-control" type="password" name="confirmPassword" required minlength="6" />
    </div>
    <div class="col-12">
        <button class="btn btn-outline-danger">Set Password</button>
    </div>
</form>
