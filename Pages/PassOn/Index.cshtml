@page
@model HospOps.Pages.PassOn.IndexModel
@{
    ViewData["Title"] = "Pass On";
}
<h3>Pass On</h3>

<form method="post" class="row g-3">
    <div class="col-md-4">
        <label class="form-label">Department</label>
        <select class="form-select" asp-for="NewNote.DepartmentId" asp-items="Model.DepartmentsSelect">
            <option value="">(none)</option>
        </select>
    </div>
    <div class="col-md-8">
        <label class="form-label">Title</label>
        <input class="form-control" asp-for="NewNote.Title" />
    </div>
    <div class="col-12">
        <label class="form-label">Message</label>
        <textarea rows="3" class="form-control" asp-for="NewNote.Message"></textarea>
    </div>
    <div class="col-12 d-flex gap-2">
        <button class="btn btn-primary" type="submit">Add</button>
    </div>
</form>

<hr />

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>When</th>
            <th>Dept</th>
            <th>Title</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var n in Model.Recent)
        {
            <tr>
                <td>@(n.UpdatedAt ?? n.CreatedAt).ToLocalTime().ToString("g")</td>
                <td>@n.Department?.Name</td>
                <td>@n.Title</td>
                <td>@n.Message</td>
            </tr>
        }
    </tbody>
</table>
