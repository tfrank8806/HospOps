@page
@model HospOps.Pages.Calendar.IndexModel
@{
    ViewData["Title"] = "Calendar";
    var day = (Model.Date?.Date ?? System.DateTime.Today);
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <a class="btn btn-outline-secondary"
       asp-page-handler="PrevDay"
       asp-route-date="@day.ToString("yyyy-MM-dd")">← Previous Day</a>

    <strong>@day.ToString("dddd, MMM d, yyyy")</strong>

    <a class="btn btn-outline-secondary"
       asp-page-handler="NextDay"
       asp-route-date="@day.ToString("yyyy-MM-dd")">Next Day →</a>
</div>

<form method="get" class="row gy-2 gx-2 align-items-end mb-3">
    <div class="col-auto">
        <label class="form-label">Date</label>
        <input class="form-control" type="date" name="date" value="@day.ToString("yyyy-MM-dd")" />
    </div>
    <div class="col-auto">
        <button class="btn btn-primary" type="submit">Go</button>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
  <thead>
    <tr>
      <th style="width:10rem">Start</th>
      <th style="width:10rem">End</th>
      <th style="width:14rem">Type</th>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
@foreach (var e in Model.Events)
{
    <tr>
      <td>@e.StartDate.ToLocalTime().ToString("g")</td>
      <td>@(e.EndDate.HasValue ? e.EndDate.Value.ToLocalTime().ToString("g") : "-")</td>
      <td>@(string.IsNullOrWhiteSpace(e.EventType) ? "-" : e.EventType)</td>
      <td>@e.EventName</td>
    </tr>
}
  </tbody>
</table>
